<% layout('layouts/boilerplate')%>

<div id="map" style="width: 100%; height: 500px"></div>
<h1>All Services</h1>
<% for (let service of services){%>
<div class="card" mb-3>
    <div class="row">
        <div class="col-md-4">
            <% if(service.images.length) {%> 
            <img class="img-fluid" alt="" src="<%=service.images[0].url%>">
            <% }else{ %>
                <img class="img-fluid" alt="" src="https://res.cloudinary.com/dotuncloud/image/upload/v1656884854/Doma/pctgl5dirxo2xwgcdcqy.jpg">
            <% } %>  
        </div>
        <div class="col-md-8">
            <div class="card-body"> 
                <h5 class="card-title"><%= service.title %> </h5>
                <p class="card-text"><%= service.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= service.location%></small>
                </p>
                <a class="btn btn-primary" href="/services/<%=service._id%>">View <%=service.title%></a>
            </div>
        </div>
    </div>
</div>
<% }%>
<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const services = {features: <%- JSON.stringify(services)%>}
</script>

<script src="/javascripts/clusterMap.js"></script>